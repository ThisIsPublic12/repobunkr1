<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.bunkr-albums"
       name="Bunkr Albums"
       version="1.0.0"
       provider-name="Your Name">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" />
    <import addon="script.module.beautifulsoup4" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Browse and play albums from bunkr-albums.io</summary>
    <description lang="en">This add-on allows you to search for albums on bunkr-albums.io and play the videos within them.</description>
    <platform>all</platform>
  </extension>
</addon>